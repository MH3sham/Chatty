<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profileImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"/>
    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/message_profileImage"
        android:background="@drawable/reciver_messages_layout"
        android:text="Reciver msg here"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/messageReceiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:58 PM"
        android:textSize="9sp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/message_profileImage"
        android:layout_below="@+id/receiver_message_text"/>


    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:background="@drawable/sender_messages_layout"
        android:text="Sender msg here"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/messageSender_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:text="02:58 PM"
        android:textSize="9sp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/sender_message_text"/>

</RelativeLayout>